#!/bin/bash
# Squelch Real-time Security Monitor

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}=== Squelch Real-time Security Monitor ===${NC}"
echo "Press Ctrl+C to exit"
echo

# Function to display current status
show_status() {
    clear
    echo -e "${BLUE}=== Squelch Live Monitor - $(date) ===${NC}"
    echo

    # fail2ban status
    echo -e "${BLUE}üîí FAIL2BAN JAILS:${NC}"
    for jail in $(fail2ban-client status 2>/dev/null | grep "Jail list:" | cut -d: -f2 | tr ',' ' '); do
        jail=$(echo $jail | xargs)
        if [ ! -z "$jail" ]; then
            banned=$(fail2ban-client status $jail 2>/dev/null | grep "Currently banned:" | awk '{print $3}')
            failed=$(fail2ban-client status $jail 2>/dev/null | grep "Currently failed:" | awk '{print $3}')

            if [ "$banned" -gt 0 ]; then
                echo -e "  $jail: ${RED}$banned banned${NC}, $failed failed"
            elif [ "$failed" -gt 0 ]; then
                echo -e "  $jail: ${YELLOW}$failed failed${NC}"
            else
                echo -e "  $jail: ${GREEN}Clean${NC}"
            fi
        fi
    done
    echo

    # System load
    echo -e "${BLUE}üíª SYSTEM:${NC}"
    echo "  Load: $(cat /proc/loadavg | cut -d' ' -f1-3)"
    echo "  Memory: $(free | grep '^Mem:' | awk '{printf "%.1f%%", $3/$2 * 100.0}')"
    echo

    # Recent connections
    echo -e "${BLUE}üåê RECENT CONNECTIONS (last 5 min):${NC}"
    journalctl -u ssh --since "5 minutes ago" | grep -E "(Accepted|Failed)" | tail -3 | while read line; do
        if echo "$line" | grep -q "Accepted"; then
            echo -e "  ${GREEN}‚úì${NC} $line"
        else
            echo -e "  ${RED}‚úó${NC} $line"
        fi
    done
    echo

    echo "Refreshing in 5 seconds..."
}

# Trap Ctrl+C
trap 'echo -e "\n${GREEN}Monitor stopped${NC}"; exit 0' INT

# Main monitoring loop
while true; do
    show_status
    sleep 5
done